<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="card shadow p-4 rounded-4 text-center">
    <div class="mx-auto rounded-circle primary-btn text-white d-flex align-items-center justify-content-center" style="width: 100px; height: 100px; font-size: 2rem;">
      <%= user.username.slice(0, 2).toUpperCase() %>
    </div>
    <h2 class="mt-3"><%= user.username %></h2>
    <p class="text-muted"><%= user.email %></p>

    <div class="mt-4">
      <a href="/listings/owned" class="btn btn-outline-dark">My Properties</a>
      <a href="/logout" class="btn btn-outline-danger ms-2">Logout</a>
    </div>
  </div>
</div>