<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-md-6 offset-md-3">
        <h2>SignUp on Wanderlust</h2>
        <form action="/signup" method="POST" class="mb-4 mt-4 needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" type="text" placeholder="e.g. username123" name="username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add an username</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" type="email" placeholder="e.g. name@email.com" name="email" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add an email</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" type="password" placeholder="e.g. strongpassword@#$2@8!&" name="password" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please add a password</div>
            </div>
            <button type="submit" class="btn btn-dark primary-btn">SignUp</button>
        </form>
        <div class="text-center">
            <p class="mb-2">Have an account? 
                <a href="/login" class="text-decoration-none fw-semibold">LogIn</a>
            </p>
        </div>
    </div>
</div>