<% layout("/layouts/boilerplate") %>

<% if (userListings.length === 0) { %>
    <div class="text-center mt-5">
        <h3>You have no property listed yet!</h3>
        <a href="/listings/new" class="btn primary-btn mt-3">Add Your First Property</a>
    </div>
<% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-4">
        <% for(let listing of userListings) { %>
            <a class="card col mb-4" href="/listings/<%= listing._id %>">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / day
                    </p>
                </div>
            </a>
        <% } %>
    </div>
<% } %>